<style>

.hanburgerContainer {
  display: inline-block;
  cursor: pointer;
  border-radius: 4px;
  width: 42px;
  height: 38px;
  display: <%=options.display%>;
  border: 2px solid gray;
}

.bar1, .bar2, .bar3 {
  width: 28px;
  height: 3px;
  background-color: #333;
  margin: 6px 6px;
  transition: 0.4s;
}

.change .bar1 {
  /* -webkit-transform: rotate(-45deg) translate(-9px, 6px); */
  transform: rotate(-45deg) translate(-9px, 6px);
}

.change .bar2 {opacity: 0;}

.change .bar3 {
  /* -webkit-transform: rotate(45deg) translate(-8px, -8px); */
  transform: rotate(45deg) translate(-7px, -4px);
}

@media screen and (max-width:1070px) {
  .hanburgerContainer{
    display: inline;
    position: relative;
  }
}

</style>
  <div class="hanburgerContainer">
    <input id="hamburgerInput" type="checkbox" style="opacity: 0; width: 100%; height:100%; position: absolute;"/>
    <div class="bar1"></div>
    <div class="bar2"></div>
    <div class="bar3"></div>
  </div>


<script>
$('.hanburgerContainer').click(function(){
  if ($('#hamburgerInput:checked').val()){
  $('.navLogin').fadeIn("slow", function(){})

  $('.navLogin').css({
        'width': '100%',
        'display': 'flex',
        'flex-direction': 'column',
    });

  $('.navLogin nav').css({
      'color': 'red',
      'width': '100%'
  });

  $('.navigator').css({
    'width': '100%',
    'flex-direction': 'column',
    'padding': '0px'
  });
    
  $('.navigator li').css({
      'border': '1px solid black',
      'color': 'black',
      'background-color': 'white',
      'width': '100%',
      'text-align': 'center',
      'height': '40px',
      'margin': '0px',        
  });

  $('.loginSigin').css({
      'width': '100%',
  });

  $('.loginSigin div').css({
    'border': '1px solid black'
  });

  }else{
    $('.navLogin').fadeOut("slow", function(){})
  }

  $('#hamburgerInput').attr('checked',!'checked')

})
</script>
