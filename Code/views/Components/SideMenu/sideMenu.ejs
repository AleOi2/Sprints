<style>
    #leftContainer{
        box-sizing:border-box;
        z-index:100;
        display: flex;
        flex-direction: column;
        text-align: left;
        align-items:center;
        padding: 2rem;
        position: absolute;
        height: 100%;
        top: 0;
        left: 0;
        transition: transform 0.3s ease-in-out;
        background: #162F35;   
        max-width: 200px;

    }


</style>


<aside id="leftContainer">
    <%-include('./hamburgerComponent_sideMenu', {
        options:{
            display:'auto', 
            id:'login'
        }}) 
    %> 
    <div style="position: relative; top: 100px;">
        <% sideElement.map((element, index) =>{%>
            <div  style="width:100%;border-bottom:1px solid #707070; margin-bottom: 1.1rem;padding-bottom: 1.2rem;text-align:center">
                <a  href=<%= element.route%> style="text-decoration: none;  color:#BABABA">
                    <%= element.label%>
                </a>
            </div>
        <%})%>
    </div>
</aside>

<script>
    $('#leftContainer').on("click", function (event){
        $('#leftContainer').css({
            'background-color': '#162F35'
        })
    })
</script>
