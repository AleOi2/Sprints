<!DOCTYPE html>
<html lang="en">
    <%-include('../Components/templateHead', {
        pageName:'Login', 
        cssFile: [
            '/css/login/login.css',
        ]
    }) %> 
<body>
    <%-include('../Components/Header/headerComponent',{
        navigator:{
            label: ["Início", "Sobre Nós", "Artigos"],
            routes:[`/inicio`,`/sobrenos`,`/artigos`]
        },
        loginSigin:{
            label: ["Login", "Cadastrar"],
            routes: [`/usuarios/login`,`/usuarios/cadastro`]
        }
    }) %>  

    <main style="background-image: url('/images/LoginCadastro/background.jpeg');height: 100vh; background-repeat: no-repeat; background-size: cover;width: 100%; display: flex; justify-content: center;">
        <div class="container">
            <div class="row">
                <div id="form" class="col-12">
                    <form id="formulario" action="/usuarios/login" method="POST" style="padding: 2rem;max-width:100%"   >
                        <div class="row">
                            <div class="col-12 info">
                                <h1>Login</h1>
                            </div>
                        </div>
                        <div class="form-group">
                            <input class="form-control" name="email" id="emailUsuario" type="email"
                                placeholder="Email">
                        </div>
                        <div class="form-group">
                            <input class="form-control" name="password" id="senhaUsuario" type="password"
                                placeholder="Senha">
                        </div>
                        <div class="form-group">
                            <% if(typeof error !== 'undefined'){%>
                                <div id="err" class="col-12 info" >
                                    <h1 style="color: red; font-size: 1rem;"><%=error%></h1>
                                </div>
                            <%}%>
                            <a href="#">Esqueceu a senha? Clique aqui!</a>
                        </div>
                        <div class="row"  style="display:flex; justify-content:center; align-items: center;">
                            <div class="col-12 info"></div>
                            <h5 >-------- Ou --------</h5>
                        </div>
                        <div class="form-group logins">
                            <div class="col-5 logins">
                                <a id="google" href="http://localhost:3000/usuarios/auth/google"  style="overflow: hidden; min-width:100px;">
                                    <img src="/images/LoginCadastro/googleLogin.png" class="card-img-top" style="width:100%; height:100%;margin: 0 auto;position: absolute;top: 0;left:0;" alt="...">
                                </a>
                            </div>
                            <div class="col-5 logins">
                                    <a id="facebook" href="http://localhost:3000/usuarios/auth/facebook" style="overflow: hidden; min-width:100px;">
                                    <img src="/images/LoginCadastro/facebookLogin.png" class="card-img-top" style="width:100%; height:100%;margin: 0 auto;position: absolute;top: 0;left:0;" alt="...">        
                                </a>
                            </div>
                        </div>
                        <div id="btn" class="form-group">
                            <button class="btn btn-outline-dark"> Entrar</button>
                        </div>
                    </form>
                    <% if(typeof(msg) != 'undefined' && msg != null){ %>
                    <div class="col-12">
                        <div class="alert alert-success" role="alert">
                            <%= msg %>
                        </div>
                    </div>
                    <% } %>

                </div>
            </div>
        </div>
    </main>
</body>

</html>