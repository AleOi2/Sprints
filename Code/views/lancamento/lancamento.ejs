<!DOCTYPE html>
<html lang="pt-br">
    <%-include('../Components/templateHead', {
        pageName:'Lançamentos', 
        cssFile: [
            '/css/Artigos/artigos.css',
        ]
    }) %> 
<body>
    <%-include('../Components/headerComponent',{
        navigator:{
            label: ["Início", "Sobre Nós", "Artigos"],
            routes:[`/inicio`,`/sobrenos`,`/artigos`]
        },
        loginSigin:{
            label: ["Login", "Cadastrar"],
            routes: [`/login`,`/cadastrar`]
        }

    }) %>  

    
    <div class="container p-3 my-3 border">
        <h2>-Despesas</h2>
        <section class="row p-5"> 
      
          <% categorias[0].forEach((imagemCategoria, index )=>{ %>
          <div class="col-md-3 p-2">
              <div class="card">
                <button class="btn btn-success" data-toggle="modal" data-target="#<%= imagemCategoria.substr(0, imagemCategoria.indexOf('.')) %>" style="background-color: white;"><img src="/images/lancamento/<%= imagemCategoria %>" alt="<%= imagemCategoria %>"></button>
              </div>
          </div>  

        <!-- Modal -->
        <div class="modal fade" id="<%= imagemCategoria.substr(0, imagemCategoria.indexOf('.')) %>" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="staticBackdropLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel"><%= imagemCategoria.substr(0, imagemCategoria.indexOf('.')) %></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                </div>
                <div class="modal-body">
 
                    <form action="">
                        <!-- area de campos do form -->
                        <div class="form-group">	
                            <input id="textNome" class="form-control" placeholder="Valor R$..." type="text">	  
                        </div>
                        <div class="form-group">	
                            <input id="Data" class="form-control" placeholder="Data..." type="date">	  
                        </div>                        
                        <div class="form-group">	
                            <input id="Descricao" class="form-control" placeholder="Descrição..." type="text">	  
                        </div>                        


                        
                        <div id="actions" class="row">
                          <div class="col-md-12">
                            <button type="submit" class="btn btn-primary">Salvar</button>
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                          </div>
                        </div>
                      </form>                          
                
                

                </div>
     
            </div>
            </div>
        </div>      
                         
          <% }); %>        

        </section>
    </div>

    <div class="container p-3 my-3 border">
        <h2>-Receitas</h2>
        <section class="row p-5"> 
      
          <% categorias[1].forEach((imagemCategoria, index )=>{ %>
          <div class="col-md-3 p-2">
              <div class="card">
                <button class="btn btn-success" data-toggle="modal" data-target="#<%= imagemCategoria.substr(0, imagemCategoria.indexOf('.')) %>" style="background-color: white;"><img src="/images/lancamento/<%= imagemCategoria %>" alt="<%= imagemCategoria %>"></button>
              </div>
          </div>  

        <!-- Modal -->
        <div class="modal fade" id="<%= imagemCategoria.substr(0, imagemCategoria.indexOf('.')) %>" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="staticBackdropLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel"><%= imagemCategoria.substr(0, imagemCategoria.indexOf('.')) %></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                </div>
                <div class="modal-body">
 
                    <form action="">
                        <!-- area de campos do form -->
                        <div class="form-group">	
                            <input id="textNome" class="form-control" placeholder="Valor R$..." type="text">	  
                        </div>
                        <div class="form-group">	
                            <input id="Data" class="form-control" placeholder="Data..." type="date">	  
                        </div>                        
                        <div class="form-group">	
                            <input id="Descricao" class="form-control" placeholder="Descrição..." type="text">	  
                        </div>                        


                        
                        <div id="actions" class="row">
                          <div class="col-md-12">
                            <button type="submit" class="btn btn-primary">Salvar</button>
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                          </div>
                        </div>
                      </form>                          
                
                

                </div>
     
            </div>
            </div>
        </div>       

          <% }); %>        


        </section>
    </div>



  <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
</div>

    </body>
</html>